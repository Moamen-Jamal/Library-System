    <main role="main" class="container">
        @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn btn-primary" })
        <!--<a href="#" class="btn btn-primary">Back</a>-->
        <br />
        <br />

        @using (Html.BeginForm("UnBorrow", "Home", FormMethod.Post))
        {
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputUserName">Book Title: </label>
                    <input name="BookTitle" type="text" value="@ViewBag.BookTitle" class="form-control" disabled />
                    @*<input name="name" type="text" id="name" placeholder="..." class="form-control">*@

                </div>
                <div class="form-group col-md-6">
                    <label for="inputRole">User</label>
                    @Html.DropDownListFor(x => x.UserID, new SelectList(ViewBag.Users, "ID", "Name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(i => i.UserID)
                    <!--<input type="text" class="form-control" id="inputPassword4">-->
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputName">NumberOfCopies: </label>
                    <input name="BookTitle" type="text" value="@ViewBag.NumberOfCopies" class="form-control" disabled />
                    @*<input name="name" type="text" id="name" placeholder="..." class="form-control">*@

                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail">NumberOfBorrowings</label>
                    <input name="NumberOfBorrowings" type="text" value="@int.Parse(Session["NumberOfBorrowings"].ToString())" class="form-control" disabled />
                    
                    <!--<input type="text" class="form-control" id="inputPassword4">-->
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail">Unborrowing Number</label>
                    @Html.TextBoxFor(i => i.NumberOfBorrowings, new { @class = "form-control" })
                    @Html.ValidationMessageFor(i => i.NumberOfBorrowings)
                    <br />
                    @if (ViewBag.Error != null)
                    {
                        <p style="color:red;text-align:center;"> @ViewBag.Error</p>
                    }
                    @*<input name="name" type="text" id="name" placeholder="..." class="form-control">*@

                </div>
                <div class="form-group col-md-6">
                  
                    <!--<input type="text" class="form-control" id="inputPassword4">-->
                </div>

            </div>
            <button type="submit" class="btn-hover-shine btn btn-info btn-lg">Save</button>
        }

